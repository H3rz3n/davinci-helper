    <!-- APP FORMAL NAME -->
    <name>DaVinci Helper</name>



    <!-- APP SUMMARY -->
    <summary>The best DaVinci Resolve companion app on Linux</summary>



    <!-- METADATA LICENSE -->
    <metadata_license>CC0-1.0</metadata_license>



