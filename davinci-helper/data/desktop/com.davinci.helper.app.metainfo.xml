    <project_license>GPL-3.0</project_license>



    <!-- APP ICON -->
    <icon type="stock">com.davinci.helper.app</icon>

    

    <!-- APP DESCRIPTION -->
    <description>

        <p>This app is created with the purpose of making it easier for Linux users to install and use DaVinci Resolve.</p>
        <p>Features :</p>
        <p>Automatic and dynamic dependecies installation</p>
        <p>DaVinci Resolve installation wizard easy start</p>
        <p>Application of post install patch</p>
        <p>Easy GPU Driver installation</p>
        <p>Easy video conversion for DaVinci Resolve Free</p>.
        <p>Visit the project GitHub page for more information.</p>

    <!-- END OF APP DESCRIPTION -->
    </description>



    <!-- APP DESKTOP FILE NAME -->
    <launchable type="desktop-id">com.davinci.helper.app.desktop</launchable>



