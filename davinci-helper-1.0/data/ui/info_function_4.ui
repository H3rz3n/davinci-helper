<?xml version="1.0" encoding="UTF-8"?>

<!-- INIZIO MACRO CONTENITORE DELL'INTERFACCIA -->
<!-- INTERFACE MACRO CONTAINER START -->
<interface>

		<!-- DICHIARAZIONE DELLE DIPENDENZE DELL'INTERFACCIA -->
		<!-- DECLARING INTERFACE DEPENDENCIES -->
    <requires lib="gtk" version="4.6"/>
    <requires lib="Adw" version="1.0"/>


    <!-- APERTURA FINESTRA PRINCIPALE -->
	<!-- MAIN WINDOW START-->
    <object class="GtkWindow" id="info_window_4">


        <!-- ||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
        <!--         INSERIMENTO DELLE PROPRIETÀ DELLA FINESTRA        -->
        <!-- ||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->

        <!-- IMPOSTAZIONE ALTEZZA ALL'APERTURA -->
		<!-- SETTING HEIGHT SIZE ON OPENING -->
        <property name="default-height">450</property>

        <!-- IMPOSTAZIONE LUNGHEZZA ALL'APERTURA -->
		<!-- SETTING WIDTH SIZE ON OPENING -->
        <property name="default-width">600</property>

        <!-- IMPOSTAZIONE DEL TITOLO NELLA BARRA DEL TITOLO -->
		<!-- SETTING THE TITLE IN THE TITLE BAR -->
        <property name="title" translatable="yes">Check and install correct GPU driver info</property>

		<!-- IMPOSTAZIONE DELLA FINESTRA COME FINESTRA DI DIALOGO -->
		<!-- SETTING THE WINDOW AS A DIALOG WINDOW -->
        <property name="modal">true</property>

		<!-- IMPOSTAZIONE DELLA CHISURA DELLA FINESTRA ALLA CHISURA DELLA FINESTRA PRINCIPALE -->
		<!-- SETTING THE WINDOW TO BE DESTROYED WITH HER MOTHER WINDOW -->
        <property name="destroy-with-parent">true</property>

		<!-- IMPOSTAZIONE POSSIBILITÀ DI RIDIMENSIONARE LA FINESTRA -->
		<!-- SETTING THE POSSIBILITY TO RESIZE THE WINDOW -->
        <property name="resizable">false</property>

        

        <!-- ||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
        <!--               CONTENUTO FINESTRA PRINCIPALE               -->
        <!--                    MAIN WINDOW CONTENT                    -->
        <!-- ||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->



        <!-- APERTURA CHILD GRIGLIA PRINCIPALE -->
        <!-- MAIN GRID CHILD START -->
        <child>

            <!-- APERTURA GRIGLIA PRINCIPALE -->
            <!-- MAIN GRID START -->
            <object class="GtkGrid" id="info_window_4_main_grid">

                <!-- PROPRIETÀ DELLA GRIGLIA PRINCIPALE -->
                <!-- MAIN GRID PARAMETERS -->

                <!-- SPAZIO TRA LE RIGHE -->
                <!-- ROW SPACING -->
                <property name="row-spacing">4</property>

                <!-- SPAZIO TRA LE COLONNE -->
                <!-- COLUMN SPACING -->
                <property name="column-spacing">50</property>

                <!-- PARAMETRO DI OMOGENEITÀ DELLE COLONNE -->
                <!-- SETTING COLUMN HOMOGENITY -->
                <property name="column-homogeneous">false</property>

                <!-- PARAMETRO DI OMOGENEITÀ DELLE RIGHE -->
                <!-- SETTING ROW HOMOGENITY -->
                <property name="row-homogeneous">false</property>

                <!-- INSERISCO I PARAMETRI CSS DEL TESTO TITOLO 4-->
                <!-- SETTING TITLE TEXT 4 CSS PARAMETERS -->
                <style>
                    <class name="Info-Grid"/>
                </style>



                  <!-- APERTURA CHILD SCORREVOLE TESTO INFO 4 -->
                  <!-- SCROLLABLE INFO TEXT 4 CHILD START -->
                  <child>

                    <!-- APERTURA SCORREVOLE TESTO INFO 4 -->
                    <!-- SCROLLABLE INFO TEXT 4 START -->
                    <object class="GtkScrolledWindow">

                      <!-- DEFINIZIONE DEL'ESPANSIONE ORIZZONTALE DEL CONTENITORE -->
                      <!-- SETTING THE VERTICAL EXPANSION OF THE CONTAINER -->
                      <property name="hexpand">true</property>

                      <!-- DEFINIZIONE DEL'ESPANSIONE ORIZZONTALE DEL CONTENITORE -->
                      <!-- SETTING THE VERTICAL EXPANSION OF THE CONTAINER -->
                      <property name="vexpand">true</property>

                      <!-- POSIZIONAMENTO DEL TESTO INFO 4 NELLA GRIGLIA GENERALE -->
                      <!-- INFO TEXT 4 POSITION INSIDE THE MAIN GRID -->
                      <layout>

                          <!-- POSIZIONE VERTICALE -->
                          <!-- VERTICAL POSITION -->
                          <property name="column">0</property>

                          <!-- POSIZIONE ORIZZONTALE -->
                          <!-- HORIZONTAL POSITION -->
                          <property name="row">0</property>

                      </layout>
                      

                      <!-- APERTURA CHILD DEL TESTO DI INFO 4 -->
                      <!-- INFO TEXT 4 CHILD START -->
                      <child>

                        <!-- APERTURA DEL TESTO DI INFO 4 -->
                        <!-- INFO TEXT 4 START -->
                        <object class="GtkLabel" id="info_text_4">
                        
                          <!-- INSERIMENTO DEL TESTO DI ANTEPRIMA 4 -->
                          <!-- SETTING THE PREVIEW TEXT 4 -->
                          <property name="label" translatable="yes">This part of the software will check what GPU are you using and then, if is supported, will check if the correct drivers are installed. If it finds missing or outdated drivers the software will install it to make your GPU fully support Davinci Resolve.</property>

                          <!-- DEFINIZIONE DELL'ALLINEAMENTO DEL TESTO -->
                          <!-- SETTING THE TEXT ALLIGNMENT -->
                          <property name="justify">center</property>

                          <!-- DEFINZIONE DELL'ALLINEMENATO ORIZZONTALE DEL TESTO NEL CONTENITORE -->
                          <!-- SETTING THE HORIZONTAL TEXT ALLIGNMENT INSIDE THE CONTAINER -->
                          <property name="xalign">0.5</property>

                          <!-- DEFINZIONE DELL'ALLINEMENATO VERTICALE DEL TESTO NEL CONTENITORE -->
                          <!-- SETTING THE VERTICAL TEXT ALLIGNMENT INSIDE THE CONTAINER -->
                          <property name="yalign">0.5</property>

                          <!-- DEFINIZIONE DEL'ESPANSIONE ORIZZONTALE DEL CONTENITORE DEL TESTO -->
                          <!-- SETTING THE VERTICAL EXPANSION OF THE TEXT CONTAINER -->
                          <property name="hexpand">true</property>

                          <!-- DEFINIZIONE DEL'ESPANSIONE ORIZZONTALE DEL CONTENITORE DEL TESTO -->
                          <!-- SETTING THE VERTICAL EXPANSION OF THE TEXT CONTAINER -->
                          <property name="vexpand">true</property>

                          <!-- DEFINIZIONE DELLA POSSIBILITÀ DI ANDARE A CAPO -->
                          <!-- SETTING THE POSSIBILITY TO GO TO A NEW LINE -->
                          <property name="wrap">true</property>

                          <!-- DEFINIZIONE DEL CRITERIO DI TRONCATURA DELLA FRASE -->
                          <!-- SETTING THE SENTENCE TRUNCATION'S CRITERIA -->
                          <property name="wrap-mode">word</property>

                          <!-- INSERISCO I PARAMETRI CSS DEL TESTO DI ANTEPRIMA 4-->
                          <!-- SETTING THE CSS PARAMETERS OF PREVIEW TEXT 4 -->
                          <style>
                              <class name="Info-Text"/>
                          </style>

                        <!-- CHIUSURA TESTO DI INFO 4-->
                        <!-- INFO TEXT 4 END -->
                        </object>

                      <!-- CHIUSURA CHILD TESTO DI INFO 4 -->
                      <!-- INFO TEXT 4 CHILD END -->
                      </child>


                    <!-- CHIUSURA SCORREVOLE TESTO INFO 4 -->
                    <!-- SCROLLABLE INFO TEXT 4 END -->
                    </object>

                  <!-- CHIUSURA CHILD SCORREVOLE TESTO INFO 4 -->
                  <!-- SCROLLABLE INFO TEXT 4 CHILD END -->
                  </child>

                  <!-- APERTURA CHILD BOX BOTTONE OK 4 -->
                  <!-- OK BUTTON BOX 4 CHILD START -->
                  <child>

                      <!-- APERTURA BOX BOTTONI OK 4 -->
                      <!-- OK BUTTON BOX 4 START -->
                      <object class="GtkBox" id="info_button_box_4">

                        <!-- IMPOSTAZIONE DELL'ORIENTAMENTO DEL BOX -->
                        <!-- SETTING THE BOX ORIENTATION -->
                        <property name="orientation">vertical</property>

                        <!-- IMPOSTAZIONE DELL'ALLINEAMENTO VERTICALE-->
                        <!-- SETTING THE BOX VERTICAL ALIGN -->
                        <property name="valign">center</property>

                        <!-- IMPOSTAZIONE DELL'ALLINEAMENTO ORIZZONTALE-->
                        <!-- SETTING THE BOX HORIZONTAL ALIGN -->
                        <property name="halign">center</property>

                        <!-- POSIZIONAMENTO DEL TESTO INFO 4 NELLA GRIGLIA GENERALE -->
                        <!-- INFO TEXT 4 POSITION INSIDE THE MAIN GRID -->
                        <layout>

                            <!-- POSIZIONE VERTICALE -->
                            <!-- VERTICAL POSITION -->
                            <property name="column">0</property>

                            <!-- POSIZIONE ORIZZONTALE -->
                            <!-- HORIZONTAL POSITION -->
                            <property name="row">1</property>

                        </layout>

                        <!-- INSERISCO I PARAMETRI CSS DEL BOTTONE OK 4-->
                        <!-- SETTING OK BUTTON 4 CSS PARAMETERS  -->
                        <style>
                          <class name="Info-Button-Box"/>
                        </style>


                        <!-- INSERIMENTO CHILD BOTTONE OK 4 -->
                        <!-- OK BUTTON 4 CHILD START -->
                        <child>

                          <!-- INSERIMENTO BOTTONE OK 4 -->
                          <!-- OK BUTTON 4 START -->
                          <object class="GtkButton" id="ok_button_4">

                            <!-- PROPRIETÀ DEL BOTTONE OK 4 -->
                            <!-- OK BUTTON 4 PARAMETERS -->

                            <!-- IMPOSTAZIONE DELL'ETICHETTA DEL BOTTONE OK 4-->
                            <!-- OK BUTTON 4 TEXT LABEL -->
                            <property name="label" translatable="yes">Understood</property>

                            <!-- INSERISCO I PARAMETRI CSS DEL BOTTONE OK 4-->
                            <!-- SETTING OK BUTTON 4 CSS PARAMETERS  -->
                            <style>
                              <class name="Ok-Button"/>
                            </style>

                          <!-- CHIUSURA BOTTONE OK 4 -->
                          <!-- OK BUTTON 4 END -->
                          </object>

                        <!-- CHIUSURA CHILD BOTTONE OK 4-->
                        <!-- OK BUTTON 4 CHILD END -->
                        </child>


                      <!-- CHIUSURA BOX BOTTONI OK 4-->
                      <!-- OK BUTTON BOX 4 END -->
                      </object>

                    <!-- CHIUSURA CHILD BOX BOTTONI OK 4 -->
                    <!-- OK BUTTON BOX 4 CHILD END -->
                  </child>



            <!-- CHIUSURA GRIGLIA PRINCIPALE -->
            <!-- MAIN GRID END -->
            </object>

        <!-- CHIUSURA CHILD GRIGLIA PRINCIPALE -->
        <!-- MAIN GRID CHILD END -->
        </child>


        <!-- CHIUSURA FINESTRA PRINCIPALE -->
		<!-- MAIN WINDOW END -->
    </object>

<!-- CHIUSURA INTERFACCIA -->
<!-- INTERFACE END -->
</interface>    